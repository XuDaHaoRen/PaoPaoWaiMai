<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:background="@color/white"
    android:layout_height="match_parent"
    >
   <RelativeLayout
       android:background="@color/red"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="50dp">
       <ImageView
           android:id="@+id/home_user_iv"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:background="@drawable/user"
           android:layout_margin="@dimen/home_padding_ten"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           />
       <EditText
           android:id="@+id/home_search_et"
           android:layout_width="210dp"
           android:layout_height="40dp"
           android:layout_toRightOf="@+id/home_user_iv"
           android:hint="请输入你想搜索的商品"
           android:paddingLeft="25dp"
           android:textSize="15sp"
           android:layout_margin="@dimen/home_padding_ten"
           android:layout_centerVertical="true"
           android:background="@drawable/search_edit"

           />
       <TextView
           android:id="@+id/home_search_tv"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:text="搜索"
           android:layout_centerVertical="true"
           android:textSize="20sp"
           android:layout_toRightOf="@+id/home_search_et"
           android:textColor="@color/white"
           android:layout_margin="@dimen/home_padding_ten"
           android:gravity="center"

           />
       <ImageView
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:layout_alignParentRight="true"
           android:layout_margin="@dimen/home_padding_ten"
           android:layout_weight="1"
           android:layout_centerVertical="true"
           android:background="@drawable/goodsdetail_customer_service_nomal"
           />
   </RelativeLayout>
    <ViewFlipper
        android:id="@+id/home_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:flipInterval="2000"
        >

    </ViewFlipper>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/home_articles_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/articles"
            />
        <ImageView
            android:id="@+id/home_food_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/food"
            />
        <ImageView
            android:id="@+id/home_agency_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/agency"
            />
    </LinearLayout>

</LinearLayout>