<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bg"
        >
        <ImageView
            android:id="@+id/flavour_back_btn"
            android:layout_width="@dimen/pic_40"
            android:layout_height="@dimen/pic_40"
            android:background="@drawable/back_btn"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/flavour_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调料用品"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/flavour_buy_car_iv"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shopping_cart"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/low_gray"
        android:padding="5dp"
        >
        <EditText
            android:id="@+id/flavour_search_et"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/search_edit"
            android:hint="请输入你需要搜索的商品"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:textSize="15sp"
             android:ems="14"
            />
        <TextView
            android:id="@+id/flavour_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            />

    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/flavour_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



</LinearLayout>